{
  "title": "KubeDB DBaaS - Comprehensive Monitoring",
  "uid": "kubedb-dbaas-comprehensive",
  "tags": [
    "kubedb",
    "mongodb",
    "dbaas",
    "monitoring"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "database_id",
        "label": "Database",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "query": {
          "query": "label_values(mongodb_up{managed_by=\"kubedb-dbaas\"}, database_id)",
          "refId": "StandardVariableQuery"
        },
        "multi": false,
        "includeAll": true,
        "allValue": ".*",
        "refresh": 1,
        "current": {
          "selected": false,
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Database Status",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "mongodb_up{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\"}",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "none",
        "colorMode": "background"
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "1": {
                  "text": "UP",
                  "color": "green"
                }
              }
            },
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                }
              }
            }
          ]
        }
      }
    },
    {
      "id": 2,
      "title": "Memory Usage (MB)",
      "type": "timeseries",
      "gridPos": {
        "h": 6,
        "w": 8,
        "x": 4,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "mongodb_ss_mem_resident{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\"}",
          "legendFormat": "{{database_id}} - Resident",
          "refId": "A"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "mongodb_ss_mem_virtual{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\"}",
          "legendFormat": "{{database_id}} - Virtual",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineInterpolation": "smooth",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Network I/O (Bytes/sec)",
      "type": "timeseries",
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(mongodb_ss_network_bytesIn{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\"}[5m])",
          "legendFormat": "{{database_id}} - In",
          "refId": "A"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(mongodb_ss_network_bytesOut{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\"}[5m])",
          "legendFormat": "{{database_id}} - Out",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 4,
      "title": "Active Connections",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 3,
        "x": 18,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "mongodb_ss_connections{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\", conn_type=\"current\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 100,
                "color": "yellow"
              },
              {
                "value": 500,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Connection Usage %",
      "type": "gauge",
      "gridPos": {
        "h": 4,
        "w": 3,
        "x": 21,
        "y": 0
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "(mongodb_ss_connections{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\", conn_type=\"current\"} / mongodb_ss_connections{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\", conn_type=\"available\"}) * 100",
          "refId": "A"
        }
      ],
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "min": 0,
          "max": 100,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 50,
                "color": "yellow"
              },
              {
                "value": 80,
                "color": "red"
              }
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "Queries Per Second (QPS)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(mongodb_ss_opcounters{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\", type=\"query\"}[5m])",
          "legendFormat": "{{database_id}} - Query",
          "refId": "A"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(mongodb_ss_opcounters{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\", type=\"insert\"}[5m])",
          "legendFormat": "{{database_id}} - Insert",
          "refId": "B"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(mongodb_ss_opcounters{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\", type=\"update\"}[5m])",
          "legendFormat": "{{database_id}} - Update",
          "refId": "C"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(mongodb_ss_opcounters{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\", type=\"delete\"}[5m])",
          "legendFormat": "{{database_id}} - Delete",
          "refId": "D"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineInterpolation": "smooth"
          }
        }
      }
    },
    {
      "id": 7,
      "title": "Slow Queries (per second)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 6
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(mongodb_profile_slow_query_count{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\"}[5m])",
          "legendFormat": "{{database_id}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "fillOpacity": 20
          }
        }
      }
    },
    {
      "id": 8,
      "title": "Storage Consumption (GB)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 14
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "mongodb_dbstats_storageSize{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\"} / 1024 / 1024 / 1024",
          "legendFormat": "{{database_id}} - {{database}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 9,
      "title": "Storage Growth Rate (GB/hour)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 14
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "rate(mongodb_dbstats_storageSize{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\"}[1h]) / 1024 / 1024 / 1024 * 3600",
          "legendFormat": "{{database_id}} - {{database}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "id": 10,
      "title": "Index Usage",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 22
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "mongodb_dbstats_indexes{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\"}",
          "legendFormat": "{{database_id}} - {{database}} - Indexes",
          "refId": "A"
        },
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "mongodb_dbstats_indexSize{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\"} / 1024 / 1024",
          "legendFormat": "{{database_id}} - {{database}} - Size (MB)",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "id": 11,
      "title": "Pod Count (Replica Set)",
      "type": "stat",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 22
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "count by(database_id) (mongodb_members_health{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\"})",
          "legendFormat": "{{database_id}}",
          "refId": "A"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 3,
                "color": "green"
              }
            ]
          }
        }
      },
      "description": "Number of MongoDB replica pods running"
    },
    {
      "id": 12,
      "title": "Replication Lag (seconds)",
      "type": "timeseries",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 22
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "(max by(database_id) (mongodb_members_optimeDate{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\", member_state=\"PRIMARY\"}) - min by(database_id) (mongodb_members_optimeDate{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\", member_state=\"SECONDARY\"})) / 1000",
          "legendFormat": "{{database_id}}",
          "refId": "A"
        }
      ],
      "alert": {
        "name": "High Replication Lag",
        "conditions": [
          {
            "evaluator": {
              "params": [
                10
              ],
              "type": "gt"
            },
            "query": {
              "params": [
                "A",
                "5m",
                "now"
              ]
            }
          }
        ]
      },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 5,
                "color": "yellow"
              },
              {
                "value": 10,
                "color": "red"
              }
            ]
          }
        }
      },
      "description": "Replication lag metric not available in current MongoDB exporter configuration"
    },
    {
      "id": 13,
      "title": "Database Size (GB)",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 0,
        "y": 30
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "sum by(database_id) (mongodb_dbstats_dataSize{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\"}) / 1024 / 1024 / 1024",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes",
          "decimals": 2,
          "color": {
            "mode": "thresholds"
          }
        }
      }
    },
    {
      "id": 14,
      "title": "Collections",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 4,
        "y": 30
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "sum by(database_id) (mongodb_dbstats_collections{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\", database!~\"admin|config|local|kubedb-system\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          }
        }
      }
    },
    {
      "id": 15,
      "title": "Total Documents",
      "type": "stat",
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 8,
        "y": 30
      },
      "targets": [
        {
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "expr": "sum by(database_id) (mongodb_dbstats_objects{managed_by=\"kubedb-dbaas\", database_id=~\"$database_id\", database!~\"admin|config|local|kubedb-system\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          }
        }
      }
    }
  ]
}